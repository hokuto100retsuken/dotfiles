theme = carbonfox

window-height = 40
window-width = 180

window-padding-x = 20
window-padding-y = 5
window-padding-balance = true

cursor-color = F2F4F8
cursor-style-blink = true

# 分割境界の色を設定（縦分割時の境界をわかりやすくする）
split-divider-color = #606060

macos-titlebar-style = tabs
# タブの背景色と前景色を設定（タブの境界をわかりやすくするため）
# 注意: macOSのタブスタイルでは、タブ間の境界線の色を直接設定する
# オプションは現在提供されていませんが、背景色を調整することで
# タブの境界がより見やすくなります。
window-titlebar-background = #1a1a1a
window-titlebar-foreground = #f2f4f8
macos-titlebar-proxy-icon= hidden
macos-window-shadow = true

quick-terminal-position = "top"
quick-terminal-screen = "main"
quick-terminal-animation-duration = 0.3
keybind = "global:cmd+shift+t=toggle_quick_terminal"

macos-icon = custom-style
macos-icon-ghost-color = 010101
macos-icon-screen-color = 78A9FF
macos-icon-frame = plastic

font-feature = -dlig

# ┃ Pane/Split Management ┃
# Neovimのウィンドウ分割の代わりにGhosttyの画面分割を使用
# 画面分割の作成
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down

# 画面分割間の移動（vim-style）
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+k=goto_split:top
keybind = ctrl+shift+l=goto_split:right

# 画面分割のリサイズ
keybind = super+ctrl+shift+left=resize_split:left,10
keybind = super+ctrl+shift+down=resize_split:down,10
keybind = super+ctrl+shift+up=resize_split:up,10
keybind = super+ctrl+shift+right=resize_split:right,10

# 画面分割のズーム（最大化/復元）
keybind = super+shift+enter=toggle_split_zoom

# 画面分割を閉じる
# ctrl+wは削除（Neovimのウィンドウ操作で使用するため）
keybind = super+w=close_surface

# 最後の分割を閉じてもGhosttyを終了しないように設定
quit-after-last-window-closed = false
