# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

autoload -U compinit
compinit -u

export HISTFILE=${HOME}/.zsh_history
export HISTSIZE=1000
export SAVEHIST=100000
setopt extended_history

alias dc='docker-compose'
alias ls='exa -F --color=auto'

### Added by Zplug's installer
if [[ ! -f $HOME/.zplug/init.zsh ]]; then
  curl -sL --proto-redir -all,https https://raw.githubusercontent.com/zplug/installer/master/installer.zsh | zsh
fi

source $HOME/.zplug/init.zsh
#zplugをzplug自身で管理
zplug 'zplug/zplug', hook-build:'zplug --self-manage'

# Load plugins
zplug "mafredri/zsh-async"
zplug "zsh-users/zsh-history-substring-search"
zplug "zsh-users/zsh-completions"
zplug "zsh-users/zsh-syntax-highlighting", as:plugin
zplug "mollifier/anyframe"
zplug "asdf-vm/asdf"
zplug "chrissicool/zsh-256color"
zplug "zsh-users/zsh-autosuggestions", as:plugin
zplug "rupa/z", use:"*.sh"

# Load theme (optional)
# zplug "themes/robbyrussell", from:oh-my-zsh
# zplug "sindresorhus/pure"
# zplug "denysdovhan/spaceship-prompt", use:spaceship.zsh, from:github, as:theme
# zplug "agnoster/agnoster-zsh-theme", use:agnoster.zsh-theme
zplug "romkatv/powerlevel10k", use:powerlevel10k.zsh-theme

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# Then, source plugins and add commands to $PATH
zplug load --verbose

autoload -Uz chpwd_recent_dirs cdr add-zsh-hook
add-zsh-hook chpwd chpwd_recent_dirs

# bindkey
bindkey '^a' beginning-of-line
bindkey '^b' anyframe-widget-checkout-git-branch
bindkey '^e' end-of-line
bindkey '^f' anyframe-widget-cdr
bindkey '^g' anyframe-widget-cd-ghq-repository
bindkey '^k' anyframe-widget-kill
bindkey '^r' anyframe-widget-execute-history
bindkey '^t' anyframe-widget-tmux-attach

# load .zshrc_*
zshrcPath=`realpath ~/.zshrc`
zshrcPath+=_`uname`
[ -f $zshrcPath ] && . $zshrcPath

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
